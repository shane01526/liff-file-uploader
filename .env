# === LINE 風格訊息設定 ===
# LINE Bot User ID (用於 destination 欄位)
LINE_BOT_USER_ID=2007733048

# 是否同時發送真實的 LINE 通知 (true/false)
# 設為 false 時只發送到 N8N，不會真的發送 LINE 訊息
SEND_LINE_NOTIFICATION=false

# === 訊息格式設定 ===
# 是否在訊息中包含個別頁面下載連結 (true/false)
INCLUDE_INDIVIDUAL_PAGE_LINKS=true

# 是否在訊息中包含 ZIP 批量下載連結 (true/false)
INCLUDE_ZIP_DOWNLOAD_LINK=true

# 訊息中顯示的最大個別頁面連結數量 (避免訊息過長)
MAX_INDIVIDUAL_LINKS_IN_MESSAGE=10

# ============= 文件轉換設定 =============
# PDF 轉圖片解析度 (DPI)
PDF_CONVERT_DENSITY=200

# 圖片輸出寬度
IMAGE_OUTPUT_WIDTH=1200

# 圖片輸出高度
IMAGE_OUTPUT_HEIGHT=1600

# 圖片輸出格式 (png/jpg)
IMAGE_OUTPUT_FORMAT=png

# LibreOffice 轉換超時時間（秒）
LIBREOFFICE_TIMEOUT=30

# 是否保留原始上傳檔案 (true/false)
KEEP_ORIGINAL_FILES=true

# ============= 調試設定 =============
# 是否在 console 中顯示完整的 N8N 請求內容 (true/false)
DEBUG_N8N_REQUESTS=true

# 是否在 console 中顯示 LINE 風格訊息內容 (true/false)
DEBUG_LINE_MESSAGES=true

# 是否保留生成的 Reply Token 在日誌中 (true/false)
LOG_REPLY_TOKENS=true
